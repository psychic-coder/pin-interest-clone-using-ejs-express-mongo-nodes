<%include ./partials/header.ejs %>

<div class="w-full h-screen bg-zinc-800 px-10 py-8 text-white">
    <div class="cards flex flex-wrap gap-10 ">
        <% user.posts.forEach( (elem)=> { %>
            <div class="card w-32">
                <div class=" w-full h-40 bg-sky-200 rounded-lg overflow-hidden">
                    <img class="w-full h-full object-cover" src="/images/uploads/<%=elem.image%>" alt="">
                 </div>
                 <h5 class="mt-2 text-sm"><%=elem.title%></h5>
                 <p class="mt-2 text-xs"><%=elem.description%></p>
            </div> 
        <% }); %> 
    </div>
</div>

<%include ./partials/footer.ejs %>